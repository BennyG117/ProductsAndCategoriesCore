@* Add a Category Partial *@

@model MyViewModel


<div class="d-flex flex-column justify-content-center align-items-center">
    <h1>Add Category</h1>
    <hr class="w-75"/>

    <form asp-action="NewProductAssociation" asp-controller="Product" method="post" class="shadow p-3 rounded d-flex flex-column p-2 justify-content-center w-100">
        <div class="d-flex">
            <input type="hidden" name="ProductId" value="@Model.Product.ProductId">

            <div class="d-flex">
            @* Column 2 - section *@
                <div class="mb-3 w-100 me-2 text-center">
                    
                    <label name="CategoryId"></label>
                    <select class="form-control" name="CategoryId">
                        <option value="" selected disabled>Select a Category</option>
                        @foreach (Category category in Model.unlinkedCategories)
                        {
                        <option value="@category.CategoryId">@category.CategoryName </option>
                        }
                    </select>

                </div>
            </div>

        </div>
        <br>
        <div class="text-end me-5"><button class="btn btn-outline-dark shadow">Add </button>
        </div>
    </form>


</div>
